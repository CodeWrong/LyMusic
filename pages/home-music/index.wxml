<!--pages/home-music/index.wxml-->
<!-- 搜索框 -->
<van-search 
    background="#fafafa"
    placeholder="搜索你喜欢的歌曲"
    shape="round"
    bind:click-input="handleClick"
/>

<!-- 轮播图 -->
<swiper class="swiper"
        indicator-dots
        autoplay
        circular
        style="height: {{swiperHeight}}px;">
    <block wx:for="{{banners}}" wx:key="bannerId">
        <swiper-item class="swiper-item">
            <image class="swiper-image" src="{{item.pic}}" mode="widthFix" bindload="handleImageLoaded"></image>
        </swiper-item>
    </block>
</swiper>

<!-- 推荐歌曲 -->
<view class="recommend-song">
    <area-header title="推荐歌曲" bind:click="handleMoreClick"></area-header>
    <view class="song-list">
        <block wx:for="{{recommendSongs}}" wx:key="id">
            <song-item-v1 item="{{item}}" bindtap="handleSongItemClick" data-index="{{index}}">
            </song-item-v1>
        </block>
    </view>
</view>

<!-- 热门歌单 -->
<song-menu-area songMenu="{{hotSongMenu}}" title="热门歌单"></song-menu-area>

<!-- 推荐歌单 -->
<song-menu-area songMenu="{{recommendSongMenu}}" title="推荐歌单"></song-menu-area>

<!-- 巅峰榜单 -->
<view class="ranking">
    <area-header title="巅峰榜" showRight="{{false}}">
    </area-header>
    <view class="ranking-list">
            <block wx:for="{{rankings}}" wx:key="name">
                <ranking-area-item item="{{item}}" 
                bindtap="handleRankingItemClick"
                data-idx="{{index}}"></ranking-area-item>
            </block>
        </view>
</view>

<!-- 播放栏 -->
<view class="play-bar" wx:if="{{currentSong.id}}">
    <view class="left">
        <image src="{{currentSong.al.picUrl}}" mode="aspectFill" class="album album-anim" 
        style="animation-play-state: {{playAnimState}};"></image>
        <view class="name">{{currentSong.name}}</view>
    </view>
    <view class="right">
        <image class="icon play" 
        src="/assets/images/music/{{isPlaying ? 'pause':'play'}}_icon.png"
        bindtap="handlePlatBtnClick"></image>
        <image class="icon playlist" src="/assets/images/music/playlist_icon.png"></image>
    </view>
</view>